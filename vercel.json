{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "includeFiles": "lib/**"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*\\.(html|css|js|png|jpg|jpeg|gif|ico|json|svg|webp))", "dest": "/$1" },
    { "src": "/admin-login", "dest": "/admin-login.html" },
    { "src": "/admin-panel", "dest": "/admin-panel.html" },
    { "src": "/dashboard", "dest": "/dashboard.html" },
    { "src": "/login", "dest": "/login.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

